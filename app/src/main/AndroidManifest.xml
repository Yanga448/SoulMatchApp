<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SoulMatchApp"
        tools:targetApi="31">
        <activity
            android:name=".ChatActivity"
            android:exported="false" />
        <activity
            android:name=".ProfileDetailsActivity"
            android:exported="false" /> <!-- Splash screen is the first thing the user sees -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.SoulMatchApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Login screen (opens right after Splash) -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.SoulMatchApp" /> <!-- Signup screen (user can navigate here from Login) -->
        <activity
            android:name=".SignupActivity"
            android:exported="false"
            android:theme="@style/Theme.SoulMatchApp" /> <!-- Main/Home screen (after login or signup) -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.SoulMatchApp" />
    </application>

</manifest>